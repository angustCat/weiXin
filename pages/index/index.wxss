/**index.wxss**/
.header {
  width: 100%;
  height: 44px;
  line-height: 44px;
  font-size: 14px;
  color: #333;
  display: flex;
  border-bottom: 1px solid #ddd;
}
.header text {
  display: block;
  flex: 1;
  text-align: center;
}
.header text.active {
  color: #e21145;
  box-shadow: inset 0 -2px 0 #e21145;
}
.red{
  margin-bottom: 5px;
  padding-bottom: 5px;
  border-bottom: 1px solid red;
}